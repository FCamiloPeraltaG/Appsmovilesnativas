<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A2FA4"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingVertical="40dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/user_icon"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:contentDescription="@string/UserLabel" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/devname"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="@font/poppins" />

        <LinearLayout
            android:id="@+id/profileEmailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/rounded_background"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profileIconEmail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email_icon" />

            <TextView
                android:id="@+id/profileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/emailexample"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profilePhoneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/rounded_background"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profileIconPhone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/phone_icon" />

            <TextView
                android:id="@+id/profilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/phoneexample"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/profileAddressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="32dp"
            android:background="@drawable/rounded_background"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profileIconAddress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/profileAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/addressexample"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>