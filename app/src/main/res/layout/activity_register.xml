<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A2FA4"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/registerlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/registerappName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AppName"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/registerlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/registerMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registermessage"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:textSize="16sp"
        android:gravity="center"
        style="@style/CustomInputStyle"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@id/registerappName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerContainerUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/registerMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/registerIconUser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/user_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/UserLabel" />

        <EditText
            android:id="@+id/registerInputUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/UserLabel"
            android:background="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            app:layout_constraintStart_toEndOf="@id/registerIconUser"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerContainerEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/registerContainerUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/registerIconEmail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/email_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/UserLabel" />

        <EditText
            android:id="@+id/registerInputEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/UserLabel"
            android:background="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            app:layout_constraintStart_toEndOf="@id/registerIconEmail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerPasswordContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/registerContainerEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <ImageView
            android:id="@+id/registericonPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/password_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/PasswordLabel" />


        <EditText
            android:id="@+id/registerinputPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/PasswordLabel"
            android:inputType="textPassword"
            style="@style/CustomInputStyle"
            android:background="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            app:layout_constraintStart_toEndOf="@id/registericonPassword"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/registerconfirmPasswordContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/registerPasswordContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <ImageView
            android:id="@+id/registericonconfirmPassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/password_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/PasswordLabel" />


        <EditText
            android:id="@+id/registerinputconfirmPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/confirmpasswordtext"
            android:inputType="textPassword"
            style="@style/CustomInputStyle"
            android:background="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            app:layout_constraintStart_toEndOf="@id/registericonconfirmPassword"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnregister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/registerbuttontext"
        android:textSize="18sp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="50dp"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/poppins"
        android:textColor="@android:color/black"
        app:strokeColor="@android:color/black"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/registerconfirmPasswordContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/registerloginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountalredyexist"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnregister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>